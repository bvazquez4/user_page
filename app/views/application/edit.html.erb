<h2>Edit User</h2>


<form action="/update_user/<%= @user.id %>">
  <input type="text" name="name" placeholder="Name" value="<%= @user.name %>">
  <input type="text" name="img" placeholder="Img URL" value="<%= @user.img %>">
  <input type="text" name="bio" placeholder="Bio" value="<%= @user.bio %>">
  <input type="submit">
</form>